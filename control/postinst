#!/bin/sh

#put controller.png where it goes

VBA_HOME=/media/internal/vba
SKINS=$VBA_HOME/skins
SKIN1=$SKINS/vincentlaw1
SKIN2=$SKINS/zsoc1
if [ -z "$IPKG_OFFLINE_ROOT" ]; then
  IPKG_OFFLINE_ROOT=/media/cryptofs/apps
fi

mkdir -p $VBA_HOME
#while we're at it...
mkdir -p $VBA_HOME/roms
mkdir -p $SKINS

rm -rf $SKIN1
#rm -rf $SKIN2

#copy the controller.png over
cp -r $IPKG_OFFLINE_ROOT/$SKINS/vincentlaw1 $SKINS
#cp -r $IPKG_OFFLINE_ROOT/$SKINS/zsoc1 $SKINS

exit 0
