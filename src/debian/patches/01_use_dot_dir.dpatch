@@ -1947,6 +1958,7 @@
 
 int main(int argc, char **argv)
 {
+  char buf[1024];
   fprintf(stderr, "VisualBoyAdvance version %s [SDL]\n", VERSION);
 
   arg0 = argv[0];
@@ -1957,12 +1969,19 @@
   ipsname[0] = 0;
   
   int op = -1;
+  struct stat s;
 
   frameSkip = 2;
   gbBorderOn = 0;
 
   parseDebug = true;
 
+  homeDir = getenv("HOME");
+  snprintf(buf, 1024, "%s/%s", homeDir, DOT_DIR);
+  /* Make dot dir if not existent */
+  if (stat(buf, &s) == -1 || !S_ISDIR(s.st_mode))
+    mkdir(buf, 0755);
+
   sdlReadPreferences();
 
   sdlPrintUsage = 0;
