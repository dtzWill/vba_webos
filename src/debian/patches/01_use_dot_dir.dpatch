   else  
     sprintf(buffer, "%s.sav", filename);
 
@@ -1407,6 +1416,8 @@
   
   if(batteryDir[0])
     sprintf(buffer, "%s/%s.sav", batteryDir, sdlGetFilename(filename));
+  else if (homeDir)
+    sprintf(buffer, "%s/%s/%s.sav", homeDir, DOT_DIR, sdlGetFilename(filename));
   else 
