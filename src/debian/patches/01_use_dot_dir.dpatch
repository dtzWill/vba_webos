     else
       sprintf(buffer, "%s%02d.bmp", filename, a);
 
@@ -2914,6 +2935,8 @@
   } else {
     if(captureDir[0])
       sprintf(buffer, "%s/%s%02d.png", captureDir, sdlGetFilename(filename), a);
+    else if (homeDir)
+      sprintf(buffer, "%s/%s/%s%02d.png", homeDir, DOT_DIR, sdlGetFilename(filename), a);
     else
